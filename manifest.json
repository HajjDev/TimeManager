{
    "manifest_version": 3,
    "name": "Time Manager",
    "version": "1.0",
    "description": "Stay focused",
    "action": {
        "default_popup": "layout.html"
    },
    "permissions": [
        "webRequest",
        "tabs",
        "nativeMessaging",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],

    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}