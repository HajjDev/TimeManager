{
    "manifest_version": 3,
    "name": "Time Manager",
    "version": "1.0",
    "description": "Stay focused",
    "action": {
        "default_popup": "layout.html"
    },
    "permissions": [
        "storage",
        "webRequest",
        "tabs",
        "scripting"        
    ],
    
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js":["script.js"]
            
        }
    ],

    "background":{
        "service_worker":"background.js"
    },
    "host_permissions":[
        "<all_urls>"
    ]
}